<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Description Tooltip Template -->
    <t t-name="web.DescriptionTooltip" owl="1">
        <div class="book-tooltip p-2 bg-light border shadow-sm"
             t-att-style="state.style">
            <t t-esc="state.description"/>
        </div>
    </t>

    <!-- Custom List Renderer Template -->
    <t t-name="web.LibraryBookListRenderer" owl="1">
        <t t-call="web.ListRenderer"/>
        <t t-if="state.tooltipMounted">
            <DescriptionTooltip registerAPI="registerTooltipAPI.bind(env)"/>
        </t>
    </t>

</templates>